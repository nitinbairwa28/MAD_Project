<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view"
        style="@style/PlacesCardView"
        app:cardCornerRadius="@dimen/cardView_cornerRadius">

        <LinearLayout
            android:id="@+id/tourPlace_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBlack">
            <ImageView
                android:id="@+id/imageOfPlace_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_image_view_dimens"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/plans_image"
                android:elevation="@dimen/elevation"/>


            <TextView
                android:id="@+id/nameOfPlace_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/tour_card_view_text_view_marginTop"
                android:layout_marginBottom="@dimen/tour_card_view_text_view_marginBottom"
                android:textColor="@color/white"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>